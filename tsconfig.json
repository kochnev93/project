{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "target": "ES6",
        "noImplicitAny": true,
        "module": "commonjs",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": ["./src/*"],
        }
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
